<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>FilterPainelControle</filter-name>
        <filter-class>Controle.Portal.FilterPainelControle</filter-class>
    </filter>
    <filter>
        <filter-name>FilterHome</filter-name>
        <filter-class>Controle.Portal.FilterHome</filter-class>
    </filter>
    <filter>
        <filter-name>FilterPainelUser</filter-name>
        <filter-class>Controle.Portal.FilterPainelUser</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterHome</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterPainelControle</filter-name>
        <url-pattern>/admin/painel/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterPainelUser</filter-name>
        <url-pattern>/admin/painel/user/adicionar_usuario.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>ServletPainelControle</servlet-name>
        <servlet-class>Controle.Portal.ServletPainelControle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogoof</servlet-name>
        <servlet-class>Controle.Portal.ServletLogoof</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletNavigation</servlet-name>
        <servlet-class>Controle.Portal.ServletNavigation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPainelControle</servlet-name>
        <url-pattern>/usrPass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogoof</servlet-name>
        <url-pattern>/logoff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletNavigation</servlet-name>
        <url-pattern>/portifolio</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/erro.jsp</location>
    </error-page>
</web-app>
